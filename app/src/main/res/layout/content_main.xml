<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="foodrequest.edu.ifsp.bri.foodrequest.MainActivity"
    tools:showIn="@layout/activity_main">



    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Gravar"
        android:id="@+id/buttonGravar"
        android:textAlignment="center"
        android:onClick="gravarProduto"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/buttonBuscar"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:id="@+id/buttonBuscar"
        android:onClick="buscarProduto"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/buttonExcluir"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Excluir"
        android:id="@+id/buttonExcluir"
        android:onClick="excluirProduto"
        android:layout_above="@+id/buttonAlterar"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Alterar"
        android:id="@+id/buttonAlterar"
        android:onClick="alterarProduto"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cadastro de Produtos"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ID do Produto"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_toStartOf="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextID"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Nome do Produto"
        android:id="@+id/textView5"
        android:layout_below="@+id/editTextID"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextNome"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="PreÃ§o do Produto"
        android:id="@+id/textView6"
        android:layout_below="@+id/editTextNome"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editTextPreco"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true" />
</RelativeLayout>
